{
  "expo": {
    "name": "Journey",
    "slug": "Journey",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ios",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Journey to access your photos to upload images and share your experiences.",
        "NSLocationWhenInUseUsageDescription": "Allow Journey to access your location to show nearby destinations and provide navigation.",
        "NSCameraUsageDescription": "Allow Journey to access your camera to take photos of destinations and share your experiences."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
